<% get_started_form = capture do %>
  <form class="bg-transparent mw7 center pv0 ph4 bn">
    <fieldset class="cf ba br3 bw2 b--white ma0 pa0">
      <label class="clip" for="email-address">Email Address</label>
      <input autofocus="autofocus" class="f5 f4-l input-reset tc bn fl black-80 bg-white pa3 lh-solid w-100 w-60-m w-two-thirds-l br2-ns br--left-ns" placeholder="Your Email Address" type="email" name="email-address" value="<%= params[:email] %>" id="email-address">
