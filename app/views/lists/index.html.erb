<%= render partial: "layouts/about_us" %>

<ul style="padding: 0px;border-left: 2px solid rgba(190, 190, 190, 0.48);list-style-type: none;">
  <% @lists.each do |list| %>
  <% items = list.items.map(&:title).join(", ") %>
    <li style="padding-left: 30px;background: url(http://thewirecutter.wpengine.netdna-cdn.com/wp-content/themes/thewirecutter/img/homepage/cat-dot.png) no-repeat 0 center;">
      <div style="padding-bottom: 15px;">
        <div><%= link_to list.name.html_safe, list_path(list.id) %></div>
        <div><small><%= link_to items, list_path(list.id) %></small></div>
      </div>
    </li>
  <% end %>
</ul>
