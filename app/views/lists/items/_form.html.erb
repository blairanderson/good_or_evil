<%= simple_form_for Item.new, url: list_items_path(@list) do |f| %>
  <%=
      f.input(
        :url, # params are stripped and sent to source
        as: :url,
        label: false,
        placeholder: "link to item! amazon.com/dp/blahblahblah",
        input_html: {
          onchange: "preview(this)",
          onpaste: "preview(this)",
          onblur: "preview(this)",
          style: "height: 44px; font-size: 24px; text-align: center;"
        }
      )
  %>
  <%= f.button(:submit, class: "disabled") %>
<% end %>

<script type="text/javascript">
  var preview = function(target) {
    $(target.form).find("input[type=submit]").removeClass("disabled")
  };
</script>
