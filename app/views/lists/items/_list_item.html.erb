<% item = list_item.item %>

<li style="display: block; border: 1px solid grey; border-radius: 4px; padding: 15px; margin-bottom: 10px;" id="item-<%= item.asin %>">
  <div class="row">
    <div class="col-sm-2">
      <%= image_tag(item.images.dig("MediumImage", "URL"), class: "img-responsive img-rounded") %>
    </div>
    <div class="col-sm-10">
      <%= link_to "(remove)", account_list_item_path(current_account, current_list, list_item), class: 'pull-right', method: :delete, data: {confirm: 'are you sure?'} %>
      <%= simple_form_for(list_item, url: account_list_item_path(current_account, current_list, list_item)) do |f| %>
        <%= f.input :details, label: "Why is this item ##{list_item_counter+1} on the list?" %>
        <%= f.button(:submit) %>
      <% end %>
    </div>
  </div>
</li>
