<%= render partial: "layouts/about_us" %>

<div class="row">
  <% @top.each do |cat| %>
    <div class="col-sm-4 col-md-6">
      <h3><%= link_to cat.name.html_safe, category_path(cat) %></h3>
      <ul>
        <% @lower[cat.id].each do |cat| %>
        <li><%= link_to cat.name.html_safe, category_path(cat) %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
